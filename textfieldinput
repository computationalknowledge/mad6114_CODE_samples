<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8">
<title>Get Text Input Field Value in JavaScript</title>
</head>
<body>
    <input type="text" placeholder="Type something..." id="myInput">
    <button type="button" onclick="getInputValue();">Get Value</button>
    
    <script>
        function getInputValue(){
            // Selecting the input element and get its value 
            var inputVal = document.getElementById("myInput").value;
            
            // Displaying the value
            alert(inputVal);
        }
    </script>
</body>
</html>


  <!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8">
<title>Get Text Input Field Value in JavaScript</title>
</head>
<body>
    <input type="text" placeholder="Type a number" id="firstInput">
    <input type="text" placeholder="Type another number" id="secondInput">
    
    <button type="button" onclick="addNumbers();">Add Numbers</button>
    
    <script>
        function addNumbers(){
            
            var firstInput = document.getElementById("firstInput").value;
            var secondInput = document.getElementById("secondInput").value;
            var output = firstInput + secondInput.value;
            alert(output);
        }
    </script>
</body>
</html>


 <!DOCTYPE html>
	<html lang="en">
	<head>
	<meta charset="utf-8">
	<title>Get Text Input Field Value in JavaScript</title>
	</head>
	<body>
	    <input type="number" placeholder="First N." id="myInput">
       <input type="number" placeholder="Second Num" id="sec2">

	    <button type="button" onclick="getInputValue();">Get Value</button>
	    
	    <script>
	        function getInputValue(){
	            // Selecting the input element and get its value 
	            var inputVal = document.getElementById("myInput").value;
	                 var inputVa2 = document.getElementById("sec2").value;
	            // Displaying the value
            var intsum =  Number(inputVal) + Number(inputVa2);
	            alert(intsum);
	        }
	    </script>
	</body>
	</html>
